{{log recipe}}
<form class="form-horizontal" method="post" {{action "submit" on="submit"}}>
    <fieldset>
        <div class="form-group {{if recipes.name "has-error"}}">
        {{!--<div class="form-group" >--}}
            <label for="nev" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" id="nev" name="nev" placeholder="pl. Tárkányos raguleves..." type="text" value="{{recipe.name}}" {{action "validate" on="change"}}>
                <span class="help-block">{{recipes.name}}</span>
            </div>
        </div>
        <div class="form-group {{if recipes.description "has-error"}}">
            <label for="leiras" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras" {{action "validate" on="change"}}>{{recipe.description}}</textarea>
                <span class="help-block">Add meg a recept hozzávalóit, elkészítésének leírását.</span>
                <span class="help-block">{{recipes.description}}</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégsem</button>
                <button type="submit" class="btn btn-primary">Felvisz</button>
            </div>
        </div>
    </fieldset>
</form>        