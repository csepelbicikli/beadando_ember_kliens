<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Dátum</th>
            {{!--<th>Státusz</th>--}}
            <th>Név</th>
            <th>Leírás</th>
            <th>Műveletek</th>
        </tr>   
    </thead>
    <tbody>

        {{#each recipes}}
        <tr>
            <td>{{date}}</td>
            {{!--<td><span class="label label-{{statusClass}}">{{statusText}}</span></td>--}}
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>
                {{link-to "Megtekintés" "recipes.view" this class="btn btn-sm btn-default"}}
                {{link-to "Módosítás" "recipes.edit" this class="btn btn-sm btn-default"}}
                <button class="btn btn-sm btn-default" {{action "deleteRecipe" this}}>Törlés</button>
            </td>
        </tr>
        {{/each}}

